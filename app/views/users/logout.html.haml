.logout-body
  .logout__default-container
    - breadcrumb :logout
    = render 'products/topheader'
    %main.logout__container__main.clearfix
      .logout__container__main-content
        %form.logout__container__main-content-inner{action: "##", method: "POST"}
          .logout__container__main-content-inner-content
            = link_to destroy_user_session_path, method: :delete, class: "mypage-nav-list-item" do
              .logout-btn{type: "submit"} ログアウト
      %main.l-container.clearfix
        .l-side
          = render 'user-sidebar'
    = render 'products/topappbanner'
    = render 'products/topfooter'
    = render 'products/topcellbtn'
