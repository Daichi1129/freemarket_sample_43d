%body.login-all
  = render 'products/productheader'
  %div
    %header.login__header
    %main.login__main.signin__main
      .login__main__panel
        .login__main__no-account
          %p.login__main__no-account-p-2
            新規会員登録
        .login__main__form
          %a.btn-default.btn-mail{href: "/deviseusers/registrations/signininformation"}
            %i.icon-mail
            メールアドレスで登録
          %button#facebook-login.btn__sns.btn__sns-facebook
            %i.fab.fa-facebook-square
            Facebookで登録
          %button#google-login.btn__sns.btn__sns-google
            %i.fab.fa-google-plus
            Googleで登録
    %footer.login__footer
      = render 'products/productfooter'
